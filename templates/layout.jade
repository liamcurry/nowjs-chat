html.no-js
  //<![endif]
  head
    meta(charset='utf-8')
    title
      block title

    block seo
      //
        meta(name='description', content='')
        meta(name='author', content='')
        meta(name='keywords', content='')
        meta(name='og:site_name', content='')
        meta(name='og:title', content='')
        meta(name='og:url', content='')
        meta(name='fb:app_id', content='')

    meta(name='viewport', content='width=device-width,initial-scale=1')

    block css
      link(rel='stylesheet', href='/css/vendor/normalize.css')
      link(rel='stylesheet', href='/css/main.css')

    //if IE
      meta(http-equiv='imagetoolbar', content='no')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

  body(data-user-id=(user ? user._id : ''), data-nickname=(user ? user.nickname : ''))
    block body
      #header
        h1 Chat
        p#nav
          if user
            span Logged in as #{user.email} |
            a(href=reverse('auth:signout')) Signout
          else
            a(href=reverse('auth:signin')) Signin
            a(href=reverse('auth:signup')) Signup
      #content
        if messages
          for message in messages
            div.message= message
        block content

    block js
      script(src='//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
      script
        window.jQuery || document.write('<script src="/js/vendor/jquery.js"><' + '/script>')

    //if lt IE 7
      script(defer, src='//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js')
      script(defer) window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})
